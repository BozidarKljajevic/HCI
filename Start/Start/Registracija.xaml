<Window x:Class="Start.Registracija"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Start"
        mc:Ignorable="d"
        Title="Registracija" Height="300" Width="600" MaxHeight="430" MaxWidth="750" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Novo korisničko ime:" HorizontalAlignment="Left" Margin="75,106,0,0" VerticalAlignment="Top" Height="30" Width="129"/>
        <TextBox Name="KorisnickoReg" HorizontalAlignment="Left" Height="30" Margin="271,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="157"/>
        <Label Content="Nova šifra" HorizontalAlignment="Left" Margin="75,200,0,0" VerticalAlignment="Top" Width="129"/>
        <PasswordBox Name="SifraReg" HorizontalAlignment="Left" Margin="271,200,0,0" VerticalAlignment="Top" Height="26" Width="157"/>
        <Label Content="Dobro došli na registraciju novih korisnika!" FontSize="15" HorizontalAlignment="Left" Margin="100,34,0,0" VerticalAlignment="Top" Height="37" Width="378"/>
        <Button Content="Ok" HorizontalAlignment="Left" Margin="482,217,0,0" VerticalAlignment="Top" Width="75" Height="26" Click="Button_Click"/>

    </Grid>
</Window>
